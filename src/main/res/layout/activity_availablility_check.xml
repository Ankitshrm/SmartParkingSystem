<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvailablilityCheck">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/MarkerImg"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/areaImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
        android:id="@+id/nameLocCard"
        android:layout_below="@+id/MarkerImg"
        app:cardCornerRadius="25dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/MarkerImg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:padding="2dp"
                android:id="@+id/LocName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:textSize="23sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/nameAddCard"
                android:layout_below="@+id/nameLocCard"
                app:cardCornerRadius="25dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/MarkerImg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:padding="2dp"
                        android:id="@+id/LocAdd"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/available"
                android:layout_below="@+id/nameAddCard"
                app:cardCornerRadius="25dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/MarkerImg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="2dp"
                        android:id="@+id/available_space"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="40dp"
                        android:text="Available space : "
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:padding="2dp"
                        android:id="@+id/availableValue"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        android:text=" "
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="2dp"
                            android:id="@+id/occupied_space"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="40dp"
                            android:text="Occupied space : "
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:padding="2dp"
                            android:id="@+id/OccupiedValue"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:text=" "
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="2dp"
                            android:id="@+id/car2_space"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="40dp"
                            android:text="2 Wheels : "
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:padding="2dp"
                            android:id="@+id/car2Value"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:text=" "
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="2dp"
                            android:id="@+id/car4_space"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="40dp"
                            android:text="4 Wheels : "
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:padding="2dp"
                            android:id="@+id/car4Value"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:text=" "
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>







            <androidx.cardview.widget.CardView
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:cardCornerRadius="25dp"
                android:layout_margin="10dp"
                android:layout_below="@+id/available"
                app:cardElevation="7dp"


                >

                <TextView
                    android:id="@+id/BookingDetails"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center"
                    android:background="#E60000"
                    android:text="@string/continue_booking"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

